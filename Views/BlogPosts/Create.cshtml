        body { background-image: url("http://news.toyark.com/wp-content/uploads/sites/4/2016/06/Hot-Toys-Resident-Evil-6-Ada-Wong-003.jpg"); }
        </style>



    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
